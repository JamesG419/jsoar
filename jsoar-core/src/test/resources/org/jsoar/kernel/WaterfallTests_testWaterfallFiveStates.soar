# halt after all fired
# S1: P1-1->S1
# S2: P2-2->S1 P3-1->S2
# S3: P4-3->S1 P5-3->S2 P6-1->S3
# S4: 
# S5: P7-4->S1 P8-4->S2 P9-4->S3 P10-1->S4 P11-1->S5
sp {halt*production
(state <s> ^level1.go true)
(<s> ^level1 <s1>
     ^level2 <s2>
     ^level3 <s3>
     ^level4 <s4>
     ^level5 <s5>)
(<s1> ^touched-by p1
      ^touched-by p2
      ^touched-by p4
      ^touched-by p7)
(<s2> ^touched-by p3
      ^touched-by p5
      ^touched-by p8)
(<s3> ^touched-by p6
      ^touched-by p9)
(<s4> ^touched-by p10)
(<s5> ^touched-by p11)
-->
(succeeded)
}
