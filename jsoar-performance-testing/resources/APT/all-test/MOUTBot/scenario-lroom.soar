# To enable this scenario, select scenario-lroom in scenario-selection

sp {elaborate*state*scenario-lroom*details
   (state <s> ^name unreal
              ^scenario <x1>)
   (<x1> ^name scenario-lroom)
-->
   (<x1>
         ^REDFOR <XR>
         ^BLUEFOR <XB>
         ^IGNORE <XI>
         ^initial-position <x2>)
   (<XR> ^name |MOUTBot1|
         ^team |Red|)
   (<XB> ^name |User|
         ^team |Blue|)
   (<XI> ^name |Watcher|
         ^team |Non-combatant|)
   (<x2> ^agent |MOUTBot1|
         ^location |3flNERoom|)
}


