sp {addition*propose*next-column
   (state <s> ^name addition
              ^addition-problem.current-column <c>)
   (<c> ^sum
       -^next-column nil)
-->
   (<s> ^operator <op> + =)
   (<op> ^name next-column)
}

sp {addition*apply*next-column
   (state <s> ^operator.name next-column
              ^addition-problem <ap>)
   (<ap> ^current-column <c>)
   (<c> ^next-column <nc>)
-->
   (<ap> ^current-column <c> -
                         <nc>)
}

