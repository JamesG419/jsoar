sp {add-column*propose*carry
   (state <s> ^name << add-column get-adden1 >>
              ^carry 1
             -^current-column.next-column.carry)
-->
   (<s> ^operator <op> + =)
   (<op> ^name carry)
}

sp {add-column*apply*carry
   (state <s> ^operator.name carry
              ^current-column.next-column <nc>)
-->
   (<nc> ^carry 1)
}

sp {add-column*compare*carry
   (state <s> ^name add-column
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name carry)
   (<op2> ^name write-sum)
-->
   (<s> ^operator <op1> > <op2>)
}

