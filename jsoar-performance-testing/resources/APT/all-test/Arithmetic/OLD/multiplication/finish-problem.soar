sp {arithmetic*propose*finish-problem
   (state <s> ^name arithmetic
              ^arithmetic-problem.current-column <c>)
   (<c> ^result
        ^next-column nil)
-->
   (<s> ^operator <op> + =)
   (<op> ^name finish-problem)
}

sp {arithmetic*apply*finish-problem*1column*result
   (state <s> ^name arithmetic
              ^operator.name finish-problem
              ^arithmetic-problem <ap>)
   (<ap> ^one-column <oc>
         ^operation-symbol <as>)
   (<oc> ^digit1 <n1>
         ^digit2 <n2>
         ^result <n3>
         ^next-column nil)
-->
   (write (crlf) | | <n1> )
   (write (crlf) <as> <n2> )
   (write (crlf) |---|)
   (write (crlf) | | <n3> )
   (halt)
}
