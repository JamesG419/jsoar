sp {subtraction*monitor*state*1column
   (state <s> ^name subtraction
              ^subtraction-problem <ap>)
   (<ap> ^one-column <oc>)
   (<oc> ^sub1 <n1>
         ^sub2 <n2>
         ^next-column nil)
-->
   (write (crlf) | | <n1> )
   (write (crlf) |-| <n2> )
   (write (crlf) |--|)
}


sp {subtraction*monitor*state*2column
   (state <s> ^name subtraction
              ^subtraction-problem <ap>)
   (<ap> ^one-column <oc>)
   (<oc> ^sub1 <n1>
         ^sub2 <n2>
         ^next-column <tc>)   
   (<tc> ^sub1 <n3>
         ^sub2 <n4>
         ^next-column nil)
-->
   (write (crlf) | | <n3> <n1> )
   (write (crlf) |-| <n4> <n2> )
   (write (crlf) |---|)
}
