sp {sub-column*propose*borrow
   (state <s> ^name << sub-column get-sub1 >>
              ^borrow 1
             -^current-column.next-column.borrow)
-->
   (<s> ^operator <op> + =)
   (<op> ^name borrow)
}

sp {sub-column*apply*borrow
   (state <s> ^operator.name borrow
              ^current-column.next-column <nc>)
-->
   (<nc> ^borrow 1)
}

sp {sub-column*compare*borrow
   (state <s> ^name sub-column
              ^operator <op1> +
                        <op2> +)
   (<op1> ^name borrow)
   (<op2> ^name write-difference)
-->
   (<s> ^operator <op1> > <op2>)
}

