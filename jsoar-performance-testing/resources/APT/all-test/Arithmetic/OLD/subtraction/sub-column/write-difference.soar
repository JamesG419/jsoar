sp {sub-column*propose*write-difference
   (state <s> ^name sub-column 
              ^difference <a>
             -^current-column.difference)
-->
   (<s> ^operator <op> + =)
   (<op> ^name write-difference)
}

sp {sub-column*apply*write-difference
   (state <s> ^operator.name write-difference
              ^difference <a>
              ^current-column <cc>)
-->
   (<cc> ^difference <a>)
}

