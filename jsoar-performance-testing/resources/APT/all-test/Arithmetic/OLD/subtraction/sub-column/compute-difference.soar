sp {sub-column*propose*compute-difference
   (state <s> ^name << get-sub1 sub-column >>
              ^sub1 <a1>
              ^sub2 <a2>
             -^difference)
-->
   (<s> ^operator <op> + =)
   (<op> ^name compute-difference)
}

sp {sub-column*apply*compute-difference
   (state <s> ^operator.name compute-difference
              ^subtraction.facts <af>
              ^sub1 <a1>
              ^sub2 <a2>)
   (<af> ^sub1 <a1>
         ^sub2 <a2>
         ^difference <difference>
         ^borrow <borrow>)
-->
   (<s> ^difference <difference>
        ^borrow <borrow>)
}
