
sp {send*update
   (state <s> ^superstate nil 
              ^io.input-link.time <time>
              ^io.output-link <ol>)
   (<time> ^day <day> ^month <month> ^year <year> ^hour <hour>)
-->
   (<ol> ^update.text (concat |It is hour | <hour> 
                              | of day |    <day> 
                              | of month |  <month> 
                              | of year |   <year>))
}

sp {send*direct
   (state <s> ^superstate nil
              ^io.output-link <ol>
              ^io.input-link.followers.<sn> <u>)
   (<u> ^screen_name jsoar)
-->
   (<ol> ^direct <direct>)
   (<direct> ^user <u>
             ^text (concat |Hello | <sn>))
}

sp {follow
   (state <s> ^superstate nil
              ^io.output-link <ol>
              ^io.input-link.users.<sn> <u>)
   (<u> ^screen_name jsoar)
-->
   (<ol> ^follow.user <u>)
}

sp {unfollow
   (state <s> ^superstate nil
              ^io.output-link <ol>
              ^io.input-link.users.<sn> <u>)
   (<u> ^screen_name jsoar)
-->
   (<ol> ^unfollow.user <u>)
}

